  "devDependencies": {
    "@types/howler": "^2.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^14.17.20",
    "@types/react": "^17.0.26",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "microbundle-crl": "^0.13.11",
